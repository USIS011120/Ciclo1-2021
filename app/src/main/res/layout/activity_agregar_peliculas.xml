<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <VideoView
        android:id="@+id/videoView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="107dp"
        tools:layout_editor_absoluteY="59dp" />


    <android.support.v7.widget.CardView
        android:id="@+id/imagen1"
        android:layout_width="203dp"
        android:layout_height="117dp"
        android:layout_below="@id/videoView"
        android:layout_marginTop="3dp">

        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/imgFotopeli1"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/imagen2"
        android:layout_width="203dp"
        android:layout_height="117dp"
        android:layout_below="@id/videoView"
        android:layout_marginLeft="208dp"
        android:layout_marginTop="3dp">

        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/imgFotopeli2"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </android.support.v7.widget.CardView>

    <EditText
        android:id="@+id/txtTitulo"
        android:layout_below="@id/imagen1"
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Titulo de la pelicula"/>
    <EditText
        android:id="@+id/txtSinopsis"
        android:layout_below="@id/txtTitulo"
        android:layout_margin="15dp"
        android:hint="Sinopsis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/txtDuracion"
        android:layout_below="@id/txtSinopsis"
        android:layout_margin="15dp"
        android:hint="Duracion de la pelicula"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/txtPrecio"
        android:layout_below="@id/txtDuracion"
        android:layout_margin="15dp"
        android:hint="Precio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnGuardarPelicula"
        android:layout_width="294dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtPrecio"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:text="guardar_pelicula" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btnAtras"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="23dp"
        android:layout_marginBottom="45dp"
        android:src="@android:drawable/ic_menu_revert" />


</RelativeLayout>